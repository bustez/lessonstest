#!/usr/bin/php5
<?php
/*
 *$name имя
 *$answer ответ на вопрос
 *033[37;1;41m красный фон
 *033[0;32m  зеленый шрифт
 *
 */
echo  'Введите имя';
$name = trim(fgets(STDIN));
    if (empty($name)){
        $name='Anonymous';
    }
echo 'привет' . ' ' . "\033[37;1;41m $name \033[0m" . ',купи слона' . "\r\n";
while ($argv >2){
    $answer= trim(fgets(STDIN));
    if($answer == 'exit' or $answer == 'EXIT'){
        break;
    }
    echo "\033[37;1;41m $name \033[0m" . ' ' . 'все говорят' . ' ' . "\033[0;32m $answer \033[0m" . ',а ты возьми и купи слона' . "\r\n";
}






